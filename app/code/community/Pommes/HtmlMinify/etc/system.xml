<config>
    <tabs>
        <pommes_modul>
            <label>Pommes</label>
            <sort_order>200</sort_order>
        </pommes_modul>
    </tabs>
    <sections>
        <pommes_htmlminify translate="label" module="pommes_htmlminify">
            <label>HTML-Minify</label>
            <tab>pommes_modul</tab>
            <sort_order>101</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <configuration translate="label">
                    <label>Configuration</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable</label>
                            <comment>Enable HTML-Minification</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <method translate="label">
                            <label>Method</label>
                            <comment>Select minify method</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>pommes_htmlminify/system_config_source_modes</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </method>
                        <remove_comments translate="label">
                            <label>Remove Comments</label>
                            <comment>Remove comments from HTML (only for PHP-Minify Mode)</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </remove_comments>
                        <actions translate="label">
                            <label>Actions</label>
                            <comment>Which actions should be minified? Separated with comma.</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </actions>
                    </fields>
                </configuration>
            </groups>
        </pommes_htmlminify>
    </sections>
</config>